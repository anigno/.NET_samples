                                    Background="{StaticResource BrushButtonFrameBorderBackground}">
                                <Grid>
                                    <Border x:Name="BlackShadowBorder"
                                            Background="{StaticResource BrushButtonRegularBorderBrush}"
                                            CornerRadius="6">
                                        <Border.Effect>
                                            <BlurEffect Radius="3" />
                                        </Border.Effect>
                                    </Border>
                                    <Border x:Name="PatternBorder"
                                            Margin="2"
                                            CornerRadius="4">
                                     
                                        <Border x:Name="BackgroundBorder"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0"
                                                                  BlurRadius="4" />
                                            </Border.Effect>
                                        </Border>
                                    </Border>
                                </Grid>
                            </Border>
                            <Border x:Name="RadialBorder"
                                    Margin="5"
                                    CornerRadius="4"
                                    Background="{StaticResource BrushButtonRadialBorderBackground}"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BrushButtonRadialBorderBrush}" />
                            <Border x:Name="PressedBorder"
                                    Margin="5"
                                    CornerRadius="4"
                                    BorderThickness="1,1,1,0"
                                    BorderBrush="{StaticResource BrushButtonRegularBorderBrush}"
                                    Opacity="0">
                                <Border x:Name="PressedShadowBorder"
                                        BorderBrush="{StaticResource BrushPressedShadowBorderBrush}"
                                        BorderThickness="1,0,1,4"
                                        CornerRadius="3">
                                    <Border.Effect>
                                        <BlurEffect Radius="6" />
                                    </Border.Effect>
                                </Border>
                            </Border>
                            <ContentPresenter RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <!--<ContentPresenter.Effect>
                                    <DropShadowEffect Direction="90"
                                                      ShadowDepth="1"
                                                      BlurRadius="1" />
                                </ContentPresenter.Effect>-->
                            </ContentPresenter>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed"
                                 Value="true">
                            <Setter Property="Foreground"
                                    Value="{StaticResource BrushButtonPressedForeground}" />
                            <Setter Property="Opacity"
                                    TargetName="BlackShadowBorder"
                                    Value="0" />
                            <Setter Property="BorderBrush"
                                    TargetName="RadialBorder"
                                    Value="#66FFFFFF" />
                            <Setter Property="BorderThickness"
                                    TargetName="RadialBorder"
                                    Value="0,0,0,1" />
                            <Setter Property="Effect"
                                    TargetName="BackgroundBorder">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="0"
                                                      ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Opacity"
                                    TargetName="PressedBorder"
                                    Value="1" />
                        </Trigger>

                        <Trigger Property="ToggleButton.IsChecked"
                                 Value="true">
                            <Setter Property="Foreground"
                                    Value="{StaticResource BrushButtonPressedForeground}" />
                            <Setter Property="Opacity"
                                    TargetName="BlackShadowBorder"
                                    Value="0" />
                            <Setter Property="BorderBrush"
                                    TargetName="RadialBorder"
                                    Value="#66FFFFFF" />
                            <Setter Property="BorderThickness"
                                    TargetName="RadialBorder"
                                    Value="0,0,0,1" />
                            <Setter Property="Effect"
                                    TargetName="BackgroundBorder">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="0"
                                                      ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Opacity"
                                    TargetName="PressedBorder"
                                    Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--EndRegion-->

    <!--Region RadioButton-->
    <Style 
           TargetType="{x:Type RadioButton}"
           BasedOn="{StaticResource StyleToggleButtonNoFrame}" />

    <Style x:Key="StyleRadioButtonFramed"
           TargetType="{x:Type RadioButton}"
           BasedOn="{StaticResource StyleToggleButtonFramed}" />
    <!--EndRegion-->

    <!--EndRegion-->
</ResourceDictionary>