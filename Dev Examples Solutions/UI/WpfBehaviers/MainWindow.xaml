<Window x:Class="WpfBehaviers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfBehaviers="clr-namespace:WpfBehaviers"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="TextBox_1" Text="Using wpfBehaviers">
                <i:Interaction.Behaviors>
                    <wpfBehaviers:ShowMessageOnLostFocusBehavier/>
                </i:Interaction.Behaviors>
            </TextBox>
            <TextBox Name="TextBox_2" Text="Using wpfBehaviers">
                <i:Interaction.Behaviors>
                    <wpfBehaviers:ShowMessageOnLostFocusBehavier/>
                </i:Interaction.Behaviors>
            </TextBox>
            
        </StackPanel>
    </Grid>
</Window>
